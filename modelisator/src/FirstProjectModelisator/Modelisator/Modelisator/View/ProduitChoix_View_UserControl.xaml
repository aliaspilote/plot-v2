<UserControl x:Class="Modelisator.View.ProduitChoix_View_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid Background="Aquamarine" HorizontalAlignment="Left"  MinWidth="150"  >
       <Label Content="Choix Produit" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
        <ContentControl>
            <ItemsControl Name="m_ProduitChoix_ItemsControl" BorderBrush="Black" BorderThickness="2">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ContentControl>
    </Grid>
</UserControl>
